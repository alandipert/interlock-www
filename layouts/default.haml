!!! XML
!!! Strict
%html
  %head
    %meta(http-equiv='Content-Language' content='en-us')
    %meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    %link(rel='stylesheet' type='text/css' href='/style/main.css' media='screen')
    %script(language='javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' type='text/javascript')
    %script(language='javascript' src='/js/jquery.tweet.js' type='text/javascript')
    %script(language='javascript' src='/js/jquery.flickr.js' type='text/javascript')
    %script(language='javascript' src='/js/init.js' type='text/javascript')
    %title= 'Interlock - ' + @item[:title]
  %body
    %h1 Interlock, Rochester NY Hackerspace
    #content

      -# The navigation menu
      %ul#nav
        %li= nav_link('home', '/')
        %li= nav_link('calendar', '/calendar/')
        %li= nav_link('projects', '/projects/')
        %li= nav_link('members', '/members/')
        %li= nav_link('contact', '/contact/')

      -# Stuff on the left side of the page (tweets, flickr pics)
      -# TODO: Make these partials, maybe?
      #left

        -# Tweets
        %div.leftbox.printout
          %img.duct_tape(src='/images/duct_tape.png')
          %h2#tweets tweets
          %div.feed#twitter_feed
          %p.tagline
            %a(href='http://twitter.com/interlockroc') follow us on twitter
        
        -# Latest Flickr group photos
        %div.leftbox.blueprint
          %img.duct_tape(src='/images/duct_tape.png')
          %h2#flickr flickr
          %div.feed#flickr_feed
          %p.tagline
            %a(href='http://www.flickr.com/groups/interlock_roc/') see us on flickr

      #right= yield

      #footer
        %p Copyleft 2009 Interlock.  Powered by <a href='http://nanoc.stoneship.org/'>nanoc3.</a>
